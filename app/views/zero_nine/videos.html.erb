
<% content_for :header do -%>
  <style type="text/css">
    html, body {
      margin:0; padding:0; width:100%; height:100%; overflow:hidden;
      background-color: black;
    }
    img {border: 0;}
    #center {position:absolute; z-index: 2;
             top: 50%; left: 50%; width: 0; height: 0; }

    #playground{
      display: block; position: relative; border: 1px solid black;
      width: 990px; height: 560px; margin-left: -495px; margin-top: -280px;
    }
    #playground a {display: block; float: left; width: 305px; height: 172px;
                   margin-left: 15px; margin-bottom: 15px; border: 1px solid black;}
    #volver {
      display: block; height: 30px; opacity: 0; filter: alpha(opacity=0)
        width: 690px; padding-left: 500px; overflow: hidden; text-indent: -10000px;
      background: transparent url('/images/reweb/volver.png') 300px 0 no-repeat;
    }

    #volver:hover {opacity: 1;filter: alpha(opacity=100)}
  </style>
<% end -%>

<div id="center">
  <div id="playground">
    <% ZeroNineController::VIDEOS[:names].each do |name| %>
      <%= link_to image_tag("reweb/videos/#{name}.png"), "/video/#{name}", :id => name %>
    <% end %>
  </div>
  <a id="volver" href="/">videos</a>
</div>